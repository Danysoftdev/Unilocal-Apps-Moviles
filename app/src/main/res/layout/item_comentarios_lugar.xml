<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"

    >

    <TextView
        android:id="@+id/fecha_comentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="14/01/2021"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/img_comentario"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher_round"/>
        <TextView
            android:id="@+id/autor_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Liliana Martinez"/>
        <TextView
            android:id="@+id/estrellas_comentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:fontFamily="@font/font_awesome_6_free_solid_900"
            android:text="ï€…"/>

    </LinearLayout>

    <TextView
        android:id="@+id/comentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="Liliana Martinez"
        android:background="@drawable/spinner_border"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />






</LinearLayout>
