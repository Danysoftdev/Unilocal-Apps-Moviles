<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardElevation="7dp"
    card_view:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:gravity="center_vertical"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre_lugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del lugar"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/calificacionPromedio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/estrella_1"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/estrella_2"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/estrella_3"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/estrella_4"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/estrella_5"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/cantidadCom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/direccion_lugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direccion"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/estado_lugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@string/txt_estado"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/horario_lugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_horario"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imagen_lugar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:src="@mipmap/ic_launcher_round"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>