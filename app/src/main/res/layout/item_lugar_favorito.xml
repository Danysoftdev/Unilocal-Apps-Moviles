<?xml version="1.0" encoding="utf-8"?>
<!--LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal"

    android:background="@drawable/spinner_border"

    -->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardElevation="7dp"
    card_view:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:src="@mipmap/ic_launcher_round" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombre_lugar_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/txt_nombre_lugar"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/categoria_lugar_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_categoriga_lugar"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/calificacion_promedio_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/calificacion_lugar_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/estrella_1"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/estrella_2"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/estrella_3"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/estrella_4"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/estrella_5"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                </LinearLayout>
                    <TextView
                        android:id="@+id/comentarios_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50" />
                </LinearLayout>

                <TextView
                    android:id="@+id/direccion_lugar_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_direccion"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end|bottom"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <Button
                        android:id="@+id/btn_eliminar_favorito"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:fontFamily="@font/font_awesome_6_free_solid_900"
                        android:text="\uf1f8"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    <Button
                        android:id="@+id/btn_comentarios"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:fontFamily="@font/font_awesome_6_free_solid_900"
                        android:text="\uf004"
                        android:textColor="@color/black"
                        android:textSize="18sp"

                        />

                </LinearLayout>



            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
