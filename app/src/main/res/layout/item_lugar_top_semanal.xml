<?xml version="1.0" encoding="utf-8"?>
<!--LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal"

    android:background="@drawable/spinner_border"

    -->
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardElevation="7dp"
        card_view:cardCornerRadius="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:src="@mipmap/ic_launcher_round" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"
          >

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombre_lugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Nombre del lugar"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/categoria_lugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categoria"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <LinearLayout
                    android:id="@+id/calificacion_lugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/estrella_1"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/estrella_2"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/estrella_3"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/estrella_4"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/estrella_5"
                        style="@style/estilo_estrellas"
                        android:textSize="15sp"/>

                </LinearLayout>
                <!--TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/font_awesome_6_free_solid_900"
                    android:text="CalificaciÃ³n"
                    android:textColor="@color/black"
                    android:textIsSelectable="true"
                    android:textSize="12sp" /-->

                <TextView
                    android:id="@+id/direccion_lugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direccion"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"


                    >

                    <TextView
                        android:id="@+id/comentarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="50" />
                    <TextView
                        android:id="@+id/corazones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:text="350"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    ><Button
                    android:id="@+id/btn_corazon"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:fontFamily="@font/font_awesome_6_free_solid_900"
                    android:text="\uf086"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />
                    <Button
                        android:id="@+id/btn_comentarios"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:fontFamily="@font/font_awesome_6_free_solid_900"
                        android:text="\uf004"
                        android:textColor="@color/black"
                        android:textSize="18sp"

                        />
                </LinearLayout>



            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


