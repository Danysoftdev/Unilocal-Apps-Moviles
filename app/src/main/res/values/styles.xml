<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titulo_lugar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="icono_lugar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/font_awesome_6_free_solid_900</item>
        <item name="android:textColor">@color/medium_blue</item>
    </style>

    <style name="linear_layout_info_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="txt_info_fragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="estilo_estrellas">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/font_awesome_6_free_solid_900</item>
        <item name="android:text">@string/ic_calificacion</item>
    </style>

</resources>